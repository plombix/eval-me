 

<h1>Alloweds</h1>

<table>
  <thead>
    <tr>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @alloweds.each do |allowed| %>
      <tr>
        <td><%= allowed.email %></td>
        <td><%= link_to 'Show', allowed %></td>
        <td><%= link_to 'Edit', edit_allowed_path(allowed) %></td>
        <td><%= link_to 'Destroy', allowed, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Allowed', new_allowed_path %>
