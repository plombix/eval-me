      <%= ans.hidden_field :user_id, :value => line[1][:user_id]%>
      <%= ans.text_field :student_answer , :value => @answer.student_answer || '' , label: "RÃ©ponse :" %>
      <%= ans.submit %>
    <% end %>
  </div>
