<p id="notice"><%= notice %></p>

<h1>Answers</h1>

<table class="table table-responsive" id="answers">
  <thead >
    <tr>
      <th>User</th>
      <th>Question</th>
      <th>Student answer</th>
    </tr>
  </thead>

  <tbody>
    <% @answers.each do |answer| %>
      <tr>
        <td><%= answer.user.email %></td>
        <td><%= answer.question.statement %></td>
        <td><%= answer.student_answer %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Answer', new_answer_path %>
