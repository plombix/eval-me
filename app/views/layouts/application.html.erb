<!DOCTYPE html>
<html>

<head>
  <title>Eval1</title>
  <link href="https://fonts.googleapis.com/css?family=Paytone+One|Syncopate:700" rel="stylesheet">
  <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
      <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body class="container-fluid" style="background-color:#BEC4C6 !important; ">
  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse-1" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <% if current_user && current_user.email == "plombix@gmail.com" %>
          <a class="navbar-brand" href="/">Good Day</a>
          <% else %>
            <a class="navbar-brand" href="/">Eval</a>
            <% end %>
      </div>

      <div class="collapse navbar-collapse" id="navbar-collapse-1">
        <ul class="nav navbar-nav navbar-right">
          <% if current_user && current_user.email == "plombix@gmail.com" %>
            <li>
              <%= link_to "Results",answers_path %>
            </li>
            <li>
              <%= link_to "Evals",evals_path %>
            </li>
            <li>
              <%= link_to "#{current_user.email}",edit_user_registration_path %>
            </li>
            <li>
              <%= link_to 'Logout', destroy_user_session_path, method: :delete %>
            </li>
            <% elsif current_user %>
              <li>
                <%= link_to "#{current_user.email}",edit_user_registration_path %>
              </li>
              <li>
                <%= link_to 'Logout', destroy_user_session_path, method: :delete %>
              </li>
              <% else %>
                <li>
                  <%= link_to 'Login', new_user_session_path %>
                </li>
                <% end %>
        </ul>
      </div>
    </div>
  </nav>
  <div class="message">
    <%= flash_messages %>
  </div>

  <div class="col-offset-xs-1 col-xs-10">
    <%= yield %>
  </div>
</body>

</html>
